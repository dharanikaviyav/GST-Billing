# GST Billing System Configuration
# Copy this file as .env and update with your credentials

# MySQL Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=gst_billing_system

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# API Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# GST Settings
# Set default company state here
DEFAULT_COMPANY_STATE=Tamil Nadu

# Logging
LOG_FILE=gst_billing.log
LOG_LEVEL=INFO